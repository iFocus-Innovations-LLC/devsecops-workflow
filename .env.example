# DevSecOps Video Automation Workflow - Environment Configuration

# OpenAI API Configuration (Required for script generation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# GitHub API Configuration (Optional - enhances topic discovery)
GITHUB_TOKEN=your_github_personal_access_token_here

# YouTube Data API Configuration (Required for video publishing)
YOUTUBE_API_KEY=your_youtube_data_api_key_here
YOUTUBE_DEVSECOPS_PLAYLIST_ID=your_youtube_playlist_id_here

# Google Cloud Project Configuration
GOOGLE_CLOUD_PROJECT=ifocus-innovations

# Flask Application Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your_flask_secret_key_here

# Database Configuration
DATABASE_URL=sqlite:///data/workflow.db

# Video Production Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
ASSETS_DIRECTORY=./assets
OUTPUT_DIRECTORY=./output

# Workflow Configuration
MAX_CONCURRENT_VIDEOS=2
DEFAULT_VIDEO_PRIVACY=private
AUTO_PUBLISH_ENABLED=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/workflow.log

# Rate Limiting Configuration
GITHUB_API_RATE_LIMIT=5000
YOUTUBE_API_QUOTA_LIMIT=10000
OPENAI_API_RATE_LIMIT=3500

# Content Configuration
DEFAULT_VIDEO_CATEGORY=28
DEFAULT_VIDEO_LANGUAGE=en
TARGET_VIDEO_DURATION=600

# Notification Configuration (Optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here


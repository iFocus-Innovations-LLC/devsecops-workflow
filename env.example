# DevSecOps Video Automation Workflow Environment Configuration

# OpenAI API (for script generation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# GitHub API (optional, for enhanced topic discovery)
GITHUB_TOKEN=your_github_token_here

# YouTube API (for video publishing)
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_DEVSECOPS_PLAYLIST_ID=your_playlist_id_here

# Google Cloud Project (for YouTube OAuth)
GOOGLE_CLOUD_PROJECT=ifocus-innovations

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your_secret_key_here_change_this_in_production

# Database Configuration
DATABASE_URL=sqlite:///backend/src/database/app.db

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:5001/api
VITE_APP_TITLE=DevSecOps Video Workflow

# File Storage
ASSETS_DIR=./assets
OUTPUT_DIR=./output
LOGS_DIR=./logs

# Video Processing
FFMPEG_PATH=/usr/local/bin/ffmpeg
MAX_VIDEO_DURATION=3600
MAX_VIDEO_SIZE=1073741824

# API Rate Limits
OPENAI_RATE_LIMIT=100
GITHUB_RATE_LIMIT=5000
YOUTUBE_RATE_LIMIT=10000
